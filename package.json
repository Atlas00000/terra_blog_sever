{
  "name": "@terrablog/server",
  "version": "1.0.0",
  "description": "Terra Industries Blog API Server",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "pnpm exec prisma migrate deploy && node dist/src/server.js",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:deploy": "prisma migrate deploy",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:all": "jest --testPathPattern='(unit|integration)'",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "test:db:check": "tsx src/scripts/test-db-check.ts",
    "test:db:create": "tsx src/scripts/test-db-create.ts",
    "test:db:migrate": "tsx src/scripts/test-db-migrate.ts",
    "test:setup": "tsx src/scripts/test-setup.ts",
    "test:full": "npm run test:setup && npm test",
    "test:week2": "tsx src/scripts/test-runner.ts",
    "test:week2:auth": "tsx src/scripts/test-auth.ts",
    "test:week2:users": "tsx src/scripts/test-users.ts",
    "test:week2:posts": "tsx src/scripts/test-posts.ts",
    "test:week3": "tsx src/scripts/test-week3-runner.ts",
    "test:week3:categories": "tsx src/scripts/test-categories.ts",
    "test:week3:tags": "tsx src/scripts/test-tags.ts",
    "test:week3:products": "tsx src/scripts/test-products.ts",
    "test:week4": "tsx src/scripts/test-week4-runner.ts",
    "test:week4:upload": "tsx src/scripts/test-media-upload.ts",
    "test:week4:management": "tsx src/scripts/test-media-management.ts",
    "test:week5": "tsx src/scripts/test-week5-runner.ts",
    "test:week5:newsletter": "tsx src/scripts/test-newsletter.ts",
    "test:week5:comments": "tsx src/scripts/test-comments.ts",
    "test:week5:contact": "tsx src/scripts/test-contact.ts",
    "test:week5:press": "tsx src/scripts/test-press.ts",
    "test:week6": "tsx src/scripts/test-week6-runner.ts",
    "test:week6:health": "tsx src/scripts/test-health.ts",
    "test:week6:caching": "tsx src/scripts/test-caching.ts",
    "test:week6:soft-deletes": "tsx src/scripts/test-soft-deletes.ts",
    "test:week7": "tsx src/scripts/test-week7-runner.ts",
    "test:week7:rate-limiting": "tsx src/scripts/test-rate-limiting.ts",
    "test:week7:security-headers": "tsx src/scripts/test-security-headers.ts",
    "test:week7:sanitization": "tsx src/scripts/test-sanitization.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.490.0",
    "@prisma/client": "^5.7.1",
    "@types/dompurify": "^3.0.5",
    "@types/jsdom": "^27.0.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dompurify": "^3.3.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.5.1",
    "express-validator": "^7.3.1",
    "helmet": "^7.1.0",
    "jsdom": "^27.0.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "redis": "^4.6.12",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prisma": "^5.7.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
